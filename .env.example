# 智能运维智能体环境配置示例
# 复制此文件为 .env 并填入实际的配置值

# LLM 配置 (DeepSeek/OpenAI/Ollama)
LLM_PROVIDER="deepseek"
LLM_MODEL_NAME="deepseek-chat"
LLM_BASE_URL="https://api.deepseek.com/v1"
LLM_TEMPERATURE="0.1"
LLM_MAX_TOKENS="2000"
LLM_TIMEOUT="60"

# DeepSeek API 配置
DEEPSEEK_API_KEY="your-deepseek-api-key-here"

# OpenAI API 配置 (备用)
OPENAI_API_KEY="your-openai-api-key-here"

# Ollama 本地配置 (备用)
OLLAMA_BASE_URL="http://localhost:11434"

# DSPy 配置 (兼容旧版本)
DSPY_LANGUAGE_MODEL="deepseek"
DSPY_API_KEY="your-deepseek-api-key-here"
DSPY_MODEL_NAME="deepseek-chat"
DSPY_TEMPERATURE="0.1"
DSPY_MAX_TOKENS="2000"

# LangGraph 配置
LANGGRAPH_CONFIG_PATH="config/langgraph.yaml"
LANGGRAPH_MAX_ITERATIONS="100"
LANGGRAPH_TIMEOUT="300"
LANGGRAPH_ENABLE_CHECKPOINTS="true"

# LangGraph 服务器配置
LANGGRAPH_SERVER_HOST="0.0.0.0"
LANGGRAPH_SERVER_PORT="2024"

# Chat UI 配置
SESSION_TIMEOUT="3600"
MAX_CONVERSATION_HISTORY="100"
CORS_ORIGINS="*"
CORS_CREDENTIALS="true"

# 日志配置
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE="logs/intelligent-ops-agent.log"

# 智能体配置
AGENT_ENABLE_LEARNING="true"
AGENT_ENABLE_REPORTING="true"
AGENT_AUTO_EXECUTION="false"
AGENT_MAX_RETRIES="3"

# 监控配置
PROMETHEUS_ENABLED="true"
PROMETHEUS_PORT="8000"
METRICS_EXPORT_INTERVAL="60"

# 数据库配置 (可选)
DATABASE_URL="sqlite:///data/intelligent_ops.db"
REDIS_URL="redis://localhost:6379/0"

# 安全配置
API_KEY_SECRET="your-secret-key-here"
ENCRYPT_SENSITIVE_DATA="true"

# 外部服务配置
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
EMAIL_SMTP_SERVER="smtp.gmail.com"
EMAIL_SMTP_PORT="587"
EMAIL_USERNAME="your-email@example.com"
EMAIL_PASSWORD="your-email-password"

# 调试配置
DEBUG="false"
VERBOSE_LOGGING="false"
ENABLE_PROFILING="false"